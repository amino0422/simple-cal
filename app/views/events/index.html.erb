<div class="main">
  <div class="left">

    <div class="left-header">
      <div class="nickname">
        <a href="#">Tom</a>
      </div>
      <div class="nickname-change">
        <a href="#">カレンダー変更</a>
      </div>
    </div>

    <div class="left-main">
      <%= form_with(model: @event, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title, "タイトル", class: "form-tag" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :start, "開始時間", class: "form-tag" %>
          <%= form.datetime_select :start, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :content, "メモ / 振り返り", class: "form-tag" %>
          <%= form.text_field :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="right">

    <div class="right-header">
      <div class="page-title">Simple Calendar</div>
    </div>

    <div class="cal">
      <%= month_calendar events: @events do |date, events| %>
        <div class="calendar-date">
          <%= date.day %>
        </div>
        <% events.each do |event| %>
          <div class="event">
            <%= link_to event.title, event %>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>